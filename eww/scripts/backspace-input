#!/bin/bash
# Backspace for challenge input

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
EWW_DIR="$(dirname "$SCRIPT_DIR")"
EWW_CMD="eww -c $EWW_DIR"

CURRENT=$($EWW_CMD get challenge-input)

if [ -n "$CURRENT" ]; then
    # Remove last character
    NEW="${CURRENT%?}"
    $EWW_CMD update challenge-input="$NEW"
fi
