; HyFocus Backdrop Window
; Fullscreen blur overlay behind modals

(defwindow hyfocus-backdrop
  :monitor 1
  :namespace "hyfocus-backdrop"
  :geometry (geometry
    :x "0%"
    :y "0%"
    :width "100%"
    :height "100%"
    :anchor "center")
  :stacking "overlay"
  :exclusive false
  :focusable false
  (box :class "backdrop"))
