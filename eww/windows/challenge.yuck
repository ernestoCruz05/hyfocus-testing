; HyFocus Challenge Window
; Modal for exit challenge (math problem)

(defwindow hyfocus-challenge
  :monitor 1
  :namespace "hyfocus-challenge"
  :geometry (geometry
    :x "0%"
    :y "0%"
    :width "320px"
    :height "240px"
    :anchor "center")
  :stacking "overlay"
  :exclusive false
  :focusable true
  (challenge-widget))
